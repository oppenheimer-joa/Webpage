extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Real Estate'

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-white',
        navbarStyle: 'navbar-light',
        navbarBrandColor: 'text-dark',
        navbarBtnColor: 'btn-primary',
        navbarContainer: 'container px-5',
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-img-cover overlay overlay-primary overlay-90',
        pageHeaderBgImg: 'background-image: url("https://source.unsplash.com/g39p1kDjvSY/1600x1200")',
        pageHeaderStyle: 'page-header-ui-dark',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .page-header-ui-content.py-5.position-relative
            .container.px-5
                .row.gx-5.justify-content-center
                    .col-xl-8.col-lg-10.text-center
                        h1.page-header-ui-title Find your forever home
                        p.page-header-ui-text.mb-5 It's time to find the home of your dreams, and you search begins here. We make it easy to find the property that fits your needs and budget.
                .row.gx-5.justify-content-center
                    .col-xl-6.col-lg-8.text-center
                        form.row.row-cols-1.row-cols-md-auto.g-3.align-items-center
                            .col.flex-grow-1
                                label.sr-only(for='inputEmail') Enter and address, city, state, or ZIP
                                input#inputEmail.form-control.form-control-solid(type='text', placeholder='Search properties near you...')
                            .col
                                button.btn.btn-teal.fw-500(type='submit') Search

    //- * * * * * * * * * * * * * * * * *
    //- * * Featured Listings Section * *
    //- * * * * * * * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-white',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: ''
    })

        .container.px-5

            .d-flex.align-items-center.justify-content-between.mb-4
                h2.mb-0 Featured Listings
                a.btn.btn-sm.btn-primary.d-inline-flex.align-items-center(href='#!')
                    | See more
                    i.ms-1(data-feather='arrow-right')

            .row.gx-5
                .col-lg-4.mb-5.mb-lg-0
                    a(href='#!').card.lift.h-100
                        .card-flag.card-flag-dark.card-flag-top-right
                            | Listed 1 month
                        img.card-img-top(src='https://source.unsplash.com/YOoucEImrKw/800x500', alt='...')
                        .card-body
