extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Agency'

append css
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/lity/2.4.0/lity.min.css')
    link(rel='stylesheet', href='https://unpkg.com/aos@next/dist/aos.css')

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-white',
        navbarStyle: 'navbar-light',
        navbarBrandColor: 'text-primary',
        navbarBtnColor: 'btn-primary',
        navbarContainer: 'container px-5',
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-img-cover overlay overlay-80',
        pageHeaderBgImg: 'background-image: url("https://source.unsplash.com/faEfWCdOKIg/1500x900")',
        pageHeaderStyle: 'page-header-ui-dark',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .page-header-ui-content.py-5.position-relative
            .container.px-5
                .row.gx-5.justify-content-center
                    .col-xl-8.col-lg-10.text-center
                        div(data-aos='fade-up')
                            h1.page-header-ui-title We are a branding and design studio
                            p.page-header-ui-text We are a group of creatives and developers who design, build, and optimize brands and digital experiences.
                        a.btn.btn-primary.fw-500(href='#get-started', data-aos='fade-up', data-aos-delay='100') Get Started

    //- * * * * * * * * * * * * *
    //- * * Services Section  * *
    //- * * * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionId: 'get-started',
        sectionBg: 'bg-white',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-light'
    })

        .container.px-5
            .row.gx-5.text-center
                .col-lg-4.mb-5.mb-lg-0
                    .icon-stack.icon-stack-xl.bg-gradient-primary-to-secondary.text-white.mb-4
                        i(data-feather='droplet')
                    h2 Design
                    p.mb-0
                        | We start by creating a set of brand guidelines and standards
                .col-lg-4.mb-5.mb-lg-0
                    .icon-stack.icon-stack-xl.bg-gradient-primary-to-secondary.text-white.mb-4
                        i(data-feather='code')
                    h2 Develop
                    p.mb-0
                        | Our award winning development team creates personalized digital experiences
                .col-lg-4
                    .icon-stack.icon-stack-xl.bg-gradient-primary-to-secondary.text-white.mb-4
                        i(data-feather='truck')
                    h2 Deliver
                    p.mb-0
                        | Our products are created on time, and to your exact specifications

    //- * * * * * * * * * * * * * * *
    //- * * Brands/Video Section  * *
    //- * * * * * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-light',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: ''
    })

        .container.px-5
            .row.gx-5.brands.text-gray-500.align-items-center.mb-5
                .col-6.col-sm-4.col-lg-2.d-flex.justify-content-center.mb-5.mb-lg-0
                    include /assets/img/demo/brand-logos/google.svg
                .col-6.col-sm-4.col-lg-2.d-flex.justify-content-center.mb-5.mb-lg-0
                    include /assets/img/demo/brand-logos/product-hunt.svg
                .col-6.col-sm-4.col-lg-2.d-flex.justify-content-center.mb-5.mb-lg-0
                    include /assets/img/demo/brand-logos/mailchimp.svg
                .col-6.col-sm-4.col-lg-2.d-flex.justify-content-center.mb-5.mb-sm-0
                    include /assets/img/demo/brand-logos/instagram.svg
                .col-6.col-sm-4.col-lg-2.d-flex.justify-content-center
                    include /assets/img/demo/brand-logos/pinterest.svg
                .col-6.col-sm-4.col-lg-2.d-flex.justify-content-center
                    include /assets/img/demo/brand-logos/dribbble.svg
            .row.gx-5.justify-content-center.z-1
                .col-lg-8(data-aos='fade-up')
                    .card.lift.mb-n15
                        .card-body.p-2
                            .video.overlay.bg-img-cover.rounded(style='background-image: url("https://source.unsplash.com/wD1LRb9OeEo/1500x900")')
                                a.video-link(href='assets/video/video.mp4', data-lity='')
                                    i.fas.fa-play

    //- * * * * * * * * * * * * * * * *
    //- * * Callout Message Section * *
    //- * * * * * * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-img-cover overlay overlay-80',
        sectionBgImg: 'background-image: url("https://source.unsplash.com/yTwXpLO5HAA/1500x900")',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: ''
    })
        .container.px-5.position-relative
            .row.gx-5.justify-content-center
                .col-lg-10
                    .display-6.text-center.py-10.my-10.text-white.
                        Effective <span class="text-primary">design</span> is finding that perfect balance between the way something <span class="text-primary">looks</span> and how it <span class="text-primary">functions.</span>

    //- * * * * * * * * * * * * * * * *
    //- * * Portfolio Items Section * *
    //- * * * * * * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-light',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-white mt-n15'
    })
        .container.px-5.z-1
            .card.mb-5(data-aos='fade-right')
                .row.g-0
                    .col-md-6
                        img.img-fluid(src='https://source.unsplash.com/6LBBOwkPzyQ/800x550', alt='...')
                    .col-md-6
                        .card-body.d-flex.align-items-center.justify-content-center.h-100.flex-column
                            h3.card-title.fw-bold.text-uppercase.mb-2 Cocooil
                            p.card-text.fw-light.mb-4
                                | Body Oil
                            a.btn.btn-outline-dark.fw-500(href='#!') View Case Study
            .card.mb-5(data-aos='fade-left')
                .row.g-0
                    .col-md-6.order-1.order-md-0
                        .card-body.d-flex.align-items-center.justify-content-center.h-100.flex-column
                            h3.card-title.fw-bold.text-uppercase.mb-2 Balitello
                            p.card-text.fw-light.mb-4
                                | Designer Socks 
                            a.btn.btn-outline-dark.fw-500(href='#!') View Case Study
                    .col-md-6.order-0.order-md-1
                        img.img-fluid(src='https://source.unsplash.com/XfHvAwu6E8E/800x550', alt='...')
            .card(data-aos='fade-right')
                .row.g-0
                    .col-md-6
                        img.img-fluid(src='https://source.unsplash.com/7LNatQYMzm4/800x550', alt='...')
                    .col-md-6
                        .card-body.d-flex.align-items-center.justify-content-center.h-100.flex-column
                            h3.card-title.fw-bold.text-uppercase.mb-2 Headphones
                            p.card-text.fw-light.mb-4
                                | Premium Audio
                            a.btn.btn-outline-dark.fw-500(href='#!') View Case Study

    //- * * * * * * * * * * * * * * * *
    //- * * Contact Button Section  * *
    //- * * * * * * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-white',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-black'
    })

        .container.px-5
            .row.gx-5.justify-content-center
                .col-xl-6.col-lg-8.col-md-10.text-center.my-10.py-10
                    h2 Ready to get Started?
                    p.lead.text-gray-500.mb-4 We'd love to hear from you about your branding and digital needs. We are currently accepting new clients.
                    a(href='#!').btn.btn-primary.fw-500 Contact us

block footer

    include mixins/footer.pug
    +footer({
        footerBg: 'bg-black',
        footerStyle: 'footer-dark'
    })

append scripts
    script(src='https://cdnjs.cloudflare.com/ajax/libs/lity/2.4.0/lity.min.js')
    script(src='https://unpkg.com/aos@next/dist/aos.js')
    script.
        AOS.init({
            disable: 'mobile',
            duration: 600,
            once: true
        });